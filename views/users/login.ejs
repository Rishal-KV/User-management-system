
<%- include("../layouts/header.ejs")-%>
<div class="container">
    <div class="card" style="height:400px; width: 400px;">
        <div class="d-flex justify-content-center">
            
            <h4>Login</h4>
        </div>
        <p style="color: green;" class="text-center"><%= locals.context? context : "" %></p>
       <form action="/loginuser" method="POST" id="signupForm">
        <div class="form">
            <label>Email Address</label>
            <input type="text" class="form-control" placeholder="Email address" name="email" id="emailInput">
            <p class="text-center" style="color: red;">
                <%=locals.emailError? emailError : " "   %>
               </p> 
        </div>
        <div id="emailError" style="color: orange;"></div>
        
        <div class="form">
            <label class="d-flex justify-content-between align-items-center"><span>Password</label>
            <input type="password" class="form-control" placeholder="Password" name="password" id="passwordInput">
       <p class="text-center" style="color: red;">
        <%=locals.passError?  passError : " "   %>
       </p> 
        </div>
        <p class="text-center">Don't have an account ? <a href="/register" class="link-offset-2 link-underline link-underline-opacity-0">Sign up</a></p>
        

     
        <div class="login-button">
            <button  type="submit "  class="btn btn-primary w-100" id="submitButton">Log in</button>
            <p id="validationMessage" class="text-center"  style="color : red"></p>
        </div>
    </form>
        
    </div>
</div>
<script src="js/login.js"></script>
<%-include("../layouts/footer.ejs")-%>